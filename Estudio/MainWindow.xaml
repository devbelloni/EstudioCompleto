            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Músicas" x:Name="listando"  Width="460"/>
                    <GridViewColumn Header="Duração" x:Name="time"  Width="160"/>
                </GridView>
            </ListView.View>
        </ListView>
--> </Grid>
</Window>
